        ".write": "auth != null && (root.child('teams').child(data.child('teamId').val()).child('leaderId').val() === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'root' || root.child('users').child(auth.uid).child('role').val() === 'admin' || (root.child('users').child(auth.uid).child('role').val() === 'super_admin' && (!data.child('companyId').exists() || data.child('companyId').val() === root.child('users').child(auth.uid).child('companyId').val())) || root.child('users').child(auth.uid).child('role').val() === 'hr')"
      },
      ".read": "auth != null",
      ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'root' || root.child('users').child(auth.uid).child('role').val() === 'admin' || root.child('users').child(auth.uid).child('role').val() === 'super_admin' || root.child('users').child(auth.uid).child('role').val() === 'hr')",
      ".indexOn": ["teamId", "userId", "isActive"]
    },
    "systemLogs": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["timestamp", "level", "userId", "action"]
    },
    "settings": {
      ".read": "auth != null",
      ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'root' || root.child('users').child(auth.uid).child('role').val() === 'super_admin')"
    },
    "messages": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["teamId", "senderId", "timestamp"]
    },
    "feedbacks": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["authorId", "category", "priority", "status", "createdAt"]
    },
    "feedbackComments": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["feedbackId", "authorId", "createdAt"]
    },
    "feedbackVotes": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["feedbackId", "userId"]
    },
    "mentionNotifications": {
      "$notificationId": {
        ".read": "auth != null && data.child('mentionedUserId').val() === auth.uid",
        ".write": "auth != null && data.child('mentionedUserId').val() === auth.uid"
      },
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["mentionedUserId", "isRead", "createdAt"]
    }
  }
}
