      ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'root' || root.child('users').child(auth.uid).child('role').val() === 'admin' || (root.child('users').child(auth.uid).child('role').val() === 'super_admin' && (!data.child('companyId').exists() || data.child('companyId').val() === root.child('users').child(auth.uid).child('companyId').val())))"
    },
    "tasks": {
      "$taskId": {
        ".read": "auth != null && (data.child('createdBy').val() === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'root' || root.child('users').child(auth.uid).child('role').val() === 'admin' || (root.child('users').child(auth.uid).child('role').val() === 'super_admin' && (!data.child('companyId').exists() || data.child('companyId').val() === root.child('users').child(auth.uid).child('companyId').val())) || root.child('users').child(auth.uid).child('role').val() === 'hr')",
