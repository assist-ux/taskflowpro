    },
    "teams": {
      "$teamId": {
        ".read": "auth != null && (data.child('leaderId').val() === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'root' || root.child('users').child(auth.uid).child('role').val() === 'admin' || (root.child('users').child(auth.uid).child('role').val() === 'super_admin' && (!data.child('companyId').exists() || data.child('companyId').val() === root.child('users').child(auth.uid).child('companyId').val())) || root.child('users').child(auth.uid).child('role').val() === 'hr')",
        ".write": "auth != null && (data.child('leaderId').val() === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'root' || root.child('users').child(auth.uid).child('role').val() === 'admin' || (root.child('users').child(auth.uid).child('role').val() === 'super_admin' && (!data.child('companyId').exists() || data.child('companyId').val() === root.child('users').child(auth.uid).child('companyId').val())) || root.child('users').child(auth.uid).child('role').val() === 'hr')"
      },
