{
  "rules": {
    "companies": {
      "$companyId": {
        ".read": "auth != null",
        ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'root' || (root.child('users').child(auth.uid).child('role').val() === 'super_admin' && root.child('users').child(auth.uid).child('companyId').val() === $companyId))"
      },
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'root'",
      ".indexOn": ["name", "isActive"]
    },
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'root' || root.child('users').child(auth.uid).child('role').val() === 'admin' || (root.child('users').child(auth.uid).child('role').val() === 'super_admin' && root.child('users').child($uid).child('companyId').val() === root.child('users').child(auth.uid).child('companyId').val()) || root.child('users').child(auth.uid).child('role').val() === 'hr'",
